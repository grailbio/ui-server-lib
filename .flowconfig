[ignore]
.*\.config\.js
.*\.spec\.js
.*/dist/*

[include]
../lib

[libs]
../lib/flow-typed
./flow-typed

[lints]
deprecated-utility=off
nonstrict-import=error
unsafe-getters-setters=error
untyped-import=error
untyped-type-import=error

[options]
emoji=true
module.name_mapper='^@grail\/lib\(.*\)$' -> '<PROJECT_ROOT>/../lib/src\1'
module.file_ext=.js
